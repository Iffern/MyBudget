<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.controlsfx.glyphfont.Glyph?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/CreationStyles.css" fx:controller="controller.AccountListController">
   <center>
      <TableView fx:id="accountTableView" prefHeight="200.0" prefWidth="340.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nameCol" minWidth="-1.0" prefWidth="113.0" text="Name" />
            <TableColumn fx:id="accountNumberCol" minWidth="-1.0" prefWidth="113.0" text="Account number" />
          <TableColumn fx:id="currBalanceCol" minWidth="-1.0" prefWidth="117.0" text="Current balance" />
            <TableColumn fx:id="initialBalanceCol" prefWidth="109.0" text="Initial Balance" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
       <HBox prefHeight="35.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="340.0" styleClass="button-box" BorderPane.alignment="CENTER">
           <children>
               <Button fx:id="addButton" mnemonicParsing="false" text="Add">
                   <graphic>
                       <Glyph fontFamily="FontAwesome" icon="PLUS" />
                   </graphic>
               </Button>
               <Button fx:id="editButton" mnemonicParsing="false" text="Edit">
                   <graphic>
                       <Glyph fontFamily="FontAwesome" icon="EDIT" />
                   </graphic>
               </Button>
               <Button fx:id="deleteButton" layoutX="100.0" layoutY="15.0" mnemonicParsing="false" text="Delete">
                   <graphic>
                       <Glyph fontFamily="FontAwesome" icon="TRASH" />
                   </graphic>
               </Button>
           </children>
       </HBox>
   </top>
</BorderPane>
