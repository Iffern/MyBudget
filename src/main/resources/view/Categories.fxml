<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<BorderPane prefHeight="400.0" prefWidth="705.0" styleClass="light-blue-background" stylesheets="@../styles/CreationStyles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CategoriesViewController">
   <center>
      <TreeView fx:id="categoriesView" prefHeight="335.0" prefWidth="670.0" styleClass="light-blue-background" BorderPane.alignment="CENTER" />
   </center>
   <top>
       <HBox prefHeight="35.0" prefWidth="340.0" styleClass="button-box, dark-background" BorderPane.alignment="CENTER">
           <children>
               <Button fx:id="addButton" mnemonicParsing="false" styleClass="yellow-background" text="Add">
                   <graphic>
                       <Glyph fontFamily="FontAwesome" icon="PLUS" />
                   </graphic>
               </Button>
               <Button fx:id="editButton" mnemonicParsing="false" styleClass="yellow-background" text="Edit">
                   <graphic>
                       <Glyph fontFamily="FontAwesome" icon="EDIT" />
                   </graphic>
               </Button>
               <Button fx:id="deleteButton" layoutX="100.0" layoutY="15.0" mnemonicParsing="false" styleClass="yellow-background" text="Delete">
                   <graphic>
                       <Glyph fontFamily="FontAwesome" icon="TRASH" />
                   </graphic>
               </Button>
           </children>
       </HBox>
   </top>
</BorderPane>
