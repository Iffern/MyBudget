<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.OperationListController">
    <center>
        <TableView fx:id="operationTableView" prefHeight="200.0" prefWidth="340.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="amountColumn" prefWidth="114.0" text="Amount" />
                <TableColumn fx:id="dateColumn" minWidth="0.0" prefWidth="94.0" text="Date" />
                <TableColumn fx:id="commentColumn" prefWidth="116.0" text="Comment" />
            </columns>
        </TableView>
    </center>
    <top>
        <HBox prefHeight="42.0" prefWidth="340.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" text="Add" />
                <Button mnemonicParsing="false" text="Delete" />
            </children>
        </HBox>
    </top>
</BorderPane>
