    <center>
    </center>
    <top>
        <HBox prefHeight="35.0" prefWidth="340.0" styleClass="button-box, dark-background" BorderPane.alignment="CENTER">
            <children>
                <SegmentedButton fx:id="modeSelect" maxWidth="Infinity" prefWidth="200.0">
                    <buttons>
                        <ToggleButton fx:id="yearlyToggle" maxWidth="Infinity" mnemonicParsing="false" selected="true" text="Yearly" />
