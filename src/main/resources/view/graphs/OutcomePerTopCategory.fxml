                    </buttons>
                </SegmentedButton>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="yearSelect" prefWidth="150.0" />
                <ComboBox fx:id="monthSelect" prefWidth="150.0" />
            </children>
        </HBox>
    </top>
    <center>

